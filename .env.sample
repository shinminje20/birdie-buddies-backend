# App
ENV=dev
DEBUG=true

# DB (runtime async)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/birdiebuddies

# DB (alembic sync) - optional if DATABASE_URL is asyncpg; it will be derived
SYNC_DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/birdiebuddies

# Redis
REDIS_URL=redis://localhost:6379/0

# Gmail OAuth & Pub/Sub
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_PROJECT_ID=your-project-id
GOOGLE_PUBSUB_TOPIC=projects/your-project-id/topics/gmail-notifications
GMAIL_OAUTH_REDIRECT_URI=https://api.mybirdies.ca/oauth2/google/callback
